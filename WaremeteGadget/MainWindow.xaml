<Window x:Class="WaremeteGadget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WaremeteGadget" Name="mainWindow"
        Width="2000" Height="4000"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True"
        MouseMove="Window_MouseMove" MouseRightButtonUp="Window_MouseRightButtonUp" Loaded="Window_Loaded" >
    
    <Grid>
        <!--身体の画像-->
        <Image HorizontalAlignment="Left"
               Name="img_body"
               Stretch="None" 
               VerticalAlignment="Top" 
               />

        <!--目の画像-->
        <Image HorizontalAlignment="Left" 
               Name="img_eyes"
               Stretch="None" 
               VerticalAlignment="Top"
               />

        <!--口の画像-->
        <Image HorizontalAlignment="Left"
               Name="img_mouth" 
               Stretch="None" 
               VerticalAlignment="Top"
               />

        <Image HorizontalAlignment="Left"
               Name="img_main"
               Stretch="Uniform" 
               VerticalAlignment="Top" 
               />
    </Grid>
</Window>
